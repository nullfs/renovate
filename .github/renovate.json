{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["dockerfile", "github-actions", "regex"],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "(^|/)(Docker|Container)file$",
                "^.*\\.yaml$"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: versioning=(?<versioning>.+?))?(?: extractVersion=(?<extractVersion>.+?))?(?:\r\n|\r|\n)\\s*(?:ARG )?\\w+(?:=|: )(?<currentValue>\\S+)"
            ]
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": ["*"],
            "groupName": "all dependencies",
            "groupSlug": "dependencies"
        }
    ]
}
