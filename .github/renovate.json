{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["dockerfile", "github-actions", "regex"],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["(^|/)(Docker|Container)file$"],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG.*?=(?<currentValue>\\S+)"
            ]
        }
    ],
    "packageRules": [
        {
            "matchFileNames": [
                ".github/workflows/java.yaml",
                "java/**"
            ],
            "groupName": "Java image dependencies",
            "groupSlug": "java"
        },
        {
            "matchFileNames": [
                ".github/workflows/nginx.yaml",
                "nginx/**"
            ],
            "groupName": "Nginx image dependencies",
            "groupSlug": "nginx"
        }
    ]
}
