{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["dockerfile", "github-actions", "regex"],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["^Dockerfile$"],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)(?: versioning=(?<versioning>.*?))?\\sARG.*?=(?<currentValue>\\S+)"
            ]
        }
    ]
}
