{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["dockerfile", "github-actions", "regex"],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["(^|/)(Docker|Container)file$"],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)(?: versioning=(?<versioning>.*?))?(?: extractVersion=(?<extractVersion>.*?))?\\sARG.*?=(?<currentValue>\\S+)"
            ]
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": ["*"],
            "groupName": "all dependencies",
            "groupSlug": "dependencies"
        }
    ]
}
